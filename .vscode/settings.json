{
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	// Biome設定ファイルの指定
	"biome.lsp.bin": "frontend/node_modules/@biomejs/biome/bin/biome",
	// frontendディレクトリの設定を使用
	"biome.lsp.configPath": "frontend/biome.json",

	//////////////
	// Ruffの設定
	//////////////

	// refs: https://marketplace.visualstudio.com/items?itemName=charliermarsh.ruff
	"[python]": {
		// デフォルトのformatterにruffを指定
		"editor.defaultFormatter": "charliermarsh.ruff",
		"editor.codeActionsOnSave": {
			// 保存時にimportを整理
			"source.organizeImports": "explicit"
		}
	},
	// ruffのネイティブ言語サーバーは設定ファイルを自動探索するため、明示的な設定は不要

	//////////////
	// Biomeの設定
	//////////////
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll.biome": "explicit"
		},
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll.biome": "explicit"
		},
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll.biome": "explicit"
		},
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll.biome": "explicit"
		},
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll.biome": "explicit"
		},
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.codeActionsOnSave": {
			"source.fixAll.biome": "explicit"
		},
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	//////////////
	// CSSの設定
	//////////////
	"[css]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},
	"files.autoSave": "onFocusChange",
	"editor.insertSpaces": true,
	"editor.tabSize": 4,
	// GithubCopilotの設定
	"github.copilot.chat.localeOverride": "ja"
}
